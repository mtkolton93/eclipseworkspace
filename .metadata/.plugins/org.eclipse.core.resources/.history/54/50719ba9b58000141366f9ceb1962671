package shooter;

import javax.swing.ImageIcon;
import javax.swing.Timer;

public class Boss extends Enemy
{
	private ImageIcon[] sprites = {
			new ImageIcon("images/bossSprite0.png"), 
			new ImageIcon("images/bossSprite1.png"), 
			new ImageIcon("images/bossSprite2.png")};
	
	public Boss(SpaceShooter s)
	{
		shooter = s;
		health = 100;
		speed = 10;
		scoreValue = 1000;
		width = 150;
		height = 101;
		x = 500;
		y = -100;
		shot[0] = new Shot(shooter, true);
		active = false;
		destroyed = false;
		autoFire = new Timer(10, this);
		autoFire.start();
		setType();
		sprite = new ImageIcon("images/bossSprite0.png");
	}
	
	@Override
	public void setType()
	{
		int type = RNGesus.nextInt(100);
		if(type < 33)
		{
			type = 0;
			sprite = sprites[0];
			shot[0].setType(0);
			health = 100;
			speed = 8;
			fireRate = 10;
		}
		else if(type < 66)
		{
			type = 1;
			sprite = sprites[1];
			
			shot = new Shot[3];
			for(int i = 0; i < 3; i++)
			{
				shot[i] = new Shot(shooter, true);
				shot[i].setType(2);
			}
			
			health = 150;
			speed = 5;
			fireRate = 15;
		}
		else if(type < 100)
		{
			type = 2;
			sprite = sprites[2];
			shot[0].setType(2);
			health = 80;
			speed = 10;
			fireRate = 2;
		}
	}
	
	@Override
	public void updatePosition()
	{
		if(y < 150)
		{
			y = y + speed;
		}
		else
		{
			x = x + speed;
			if(x > 730)
			{
				x = 730;
			}
			if(x < 320)
			{
				x = 320;
			}
			if(RNGesus.nextInt(100) > 95)
			{
				speed = -speed;
			}
		}
	}
}
